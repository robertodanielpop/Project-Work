        <script>
            let productlist = document.getElementById("productlist");
            let req = "http://127.0.0.1:8000/products/"
            fetch(req,  {
                  method: 'GET',
                  headers: {
                 'Accept': 'application/json',
                 'Content-Type': 'application/json',
                  }})
            .then(response => response.json())
            .then(data => { 

            console.log(JSON.stringify(data));

            data.forEach(element => {

            let results = localStorage.getItem("SearchData").split(",");

            let number = JSON.stringify(element.id);

            let found = results.find(elements => elements === number);


                if(found) {
                let productId = element.id;
                let productName = element.name; // get the pokemon name
                let productPrice = element.price;
                let productImage = element.product_image;
                let newListelement = document.createElement("div"); // create an li element
                newListelement.innerHTML = '<div class="hover:text-blue-400 p-3"> <a href="/product" class="block relative h-48 rounded overflow-hidden"><img onclick="grab(this.id)" id="' + productId + '" alt="ecommerce" class="object-cover object-center w-72 h-48 block border-solid border-2 border-black" src="' + productImage + '"></a><div class="mt-4"><h3 class="text-gray-500 text-xs tracking-widest title-font mb-1">Gym Equipment</h3><h2 class="text-gray-900 title-font text-lg font-medium">' + productName + '</h2><p class="mb-5 mt-1">' + "â‚¬" + productPrice + '</p></div></div>';
                productlist.appendChild(newListelement);
            }}) });


           function grab(id) {
               localStorage.setItem("ProductId", id);
           }

        </script>
    </body>

