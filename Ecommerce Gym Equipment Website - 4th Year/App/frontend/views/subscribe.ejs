<!DOCTYPE html>
<html>
  <head>
      <link rel="stylesheet" href="stylesheets/tailwind-output.css">
  </head>
  <body>

        <style>@import url('https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.min.css')</style>

<div class="min-w-screen min-h-screen bg-gray-50 flex items-center justify-center py-5">
    <div class="w-full bg-white border-t border-b border-gray-200 px-5 py-16 md:py-24 text-gray-800 font-light">
        <div class="w-full max-w-6xl mx-auto pb-5">
            <div class="-mx-3 md:flex items-center">
                <div class="px-3 md:w-2/3 mb-10 md:mb-0">
                    <h1 class="text-6xl md:text-8xl font-bold mb-5 leading-tight">Want <br class="hidden md:block">discounts?</h1>
                    <h3 class="text-gray-600 mb-7 leading-tight">Subscribe now and be the first to receive the latest updates, discounts and special offers.</h3>
                    <div>
                        <span class="inline-block w-40 h-1 rounded-full bg-blue-500"></span>
                        <span class="inline-block w-3 h-1 rounded-full bg-blue-500 ml-1"></span>
                        <span class="inline-block w-1 h-1 rounded-full bg-blue-500 ml-1"></span>
                    </div>
                </div>
                <div class="px-3 md:w-1/3">
                    <form>
                        <div class="flex mb-3">
                            <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"><i class="mdi mdi-email-outline text-gray-400 text-lg"></i></div>
                            <input id="email_subscribe" type="email" class="w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-blue-500" placeholder="email@example.com">
                        </div>
                        <div>
                            <button id="subscribed" type="button" onClick="subscribe()" class="block w-full bg-blue-500 hover:bg-blue-400 focus:bg-blue-400 transition-colors text-white rounded-lg px-3 py-2 font-semibold">Subscribe now.</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

  </body>

<script>

function subscribe() {

    let add_email = document.getElementById("email_subscribe").value;

    console.log(add_email);

        fetch("http://127.0.0.1:8000/subscribe/",
        {
            headers: {
                "Accept": "application/json",
                "Content-Type": "application/json"
            },
            method: "POST",
            body: JSON.stringify({"email": add_email})
        })
        .then(response => response.json() )
        .then(data => {
            console.log(data)

            document.getElementById("subscribed").textContent = "Subscribed";
        })
}
 
</script>
</html>

